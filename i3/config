set $urgent-text-color   #ff784b

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #0000aa
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #0000aa
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #0000aa
client.urgent           $inactive-bg-color  $inactive-bg-color $urgent-text-color   #0000aa

