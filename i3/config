# Primary Monitor Bar
bar {
        output primary

        font pango:Anonymous Pro 12
        tray_output primary
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        
        colors {
                background $inactive-bg-color
                separator #757575
                #                  border               background         text
                focused_workspace  $bg-color            $bg-color          $text-color
                inactive_workspace $inactive-bg-color   $inactive-bg-color $inactive-text-color
                urgent_workspace   $inactive-bg-color   $inactive-bg-color $urgent-text-color
        }

        bindsym button4 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
        bindsym button5 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
        
}

